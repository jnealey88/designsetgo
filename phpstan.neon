parameters:
	# Level 5 provides strong type checking without being overly strict
	level: 5

	# Paths to analyze
	paths:
		- includes
		- designsetgo.php

	# Excluded paths
	excludePaths:
		- vendor
		- node_modules
		- build
		- tests
		- .wp-env

	# Bootstrap files for WordPress functions and plugin constants
	bootstrapFiles:
		- vendor/php-stubs/wordpress-stubs/wordpress-stubs.php
		- designsetgo.php
		- phpstan-constants.php

	ignoreErrors:
		# WordPress globals
		- '#Undefined variable: \$wpdb#'
		- '#Undefined variable: \$wp_#'

		# WordPress functions that PHPStan doesn't understand
		- '#Function wp_[a-z_]+ not found#'
		- '#Function get_[a-z_]+ not found#'
		- '#Function add_[a-z_]+ not found#'
		- '#Function register_[a-z_]+ not found#'

		# Allow dynamic properties (common in WordPress)
		- '#Access to an undefined property#'

		# Ignore missing array typehints (common in WordPress)
		-
			identifier: missingType.iterableValue

		# Ignore missing generic typehints (common in WordPress)
		-
			identifier: missingType.generics

	# Report unmatched ignored errors
	reportUnmatchedIgnoredErrors: false
