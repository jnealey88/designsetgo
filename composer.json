{
  "name": "designsetgo/designsetgo",
  "description": "Modern Gutenberg block library bridging the gap between core WordPress blocks and advanced page builders. Design made easy, fast, and beautiful.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.4",
    "wordpress/abilities-api": "^0.4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "yoast/phpunit-polyfills": "^2.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.3",
    "szepeviktor/phpstan-wordpress": "^1.3"
  },
  "scripts": {
    "lint": [
      "phpcs --standard=phpcs.xml"
    ],
    "lint:fix": [
      "phpcbf --standard=phpcs.xml"
    ],
    "test": [
      "phpunit"
    ],
    "analyse": [
      "phpstan analyse"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
