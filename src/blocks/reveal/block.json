{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "designsetgo/reveal",
	"version": "1.0.0",
	"title": "Reveal",
	"category": "design",
	"parent": ["designsetgo/hidden-blocks"],
	"description": "Container that reveals hidden content on hover",
	"keywords": ["reveal", "hover", "hidden", "show", "container"],
	"textdomain": "designsetgo",
	"supports": {
		"align": ["wide", "full"],
		"anchor": true,
		"html": false,
		"color": {
			"gradients": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true,
			"__experimentalDefaultControls": {
				"padding": true,
				"blockGap": true
			}
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"layout": {
			"allowSwitching": false,
			"allowInheriting": false,
			"default": {
				"type": "flex",
				"orientation": "vertical"
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"radius": true
			}
		}
	},
	"attributes": {
		"revealAnimation": {
			"type": "string",
			"default": "fade"
		},
		"revealDuration": {
			"type": "number",
			"default": 300
		},
		"isRevealContainer": {
			"type": "boolean",
			"default": true
		}
	},
	"providesContext": {
		"designsetgo/reveal/isRevealContainer": "isRevealContainer"
	},
	"example": {
		"attributes": {},
		"innerBlocks": [
			{
				"name": "core/heading",
				"attributes": {
					"content": "Hover over me",
					"level": 3
				}
			},
			{
				"name": "core/paragraph",
				"attributes": {
					"content": "This content appears on hover"
				}
			}
		]
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
