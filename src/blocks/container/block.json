{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "designsetgo/container",
	"version": "1.0.0",
	"title": "Container",
	"category": "designsetgo",
	"description": "Advanced layout container with flex/grid controls, backgrounds, and visual effects.",
	"keywords": ["container", "layout", "section", "wrapper"],
	"textdomain": "designsetgo",
	"supports": {
		"align": ["wide", "full"],
		"anchor": true,
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true
		},
		"color": {
			"background": true,
			"text": true,
			"gradients": true
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		}
	},
	"attributes": {
		"uniqueId": {
			"type": "string",
			"default": ""
		},
		"layout": {
			"type": "string",
			"default": "flex",
			"enum": ["flex", "grid", "auto-grid"]
		},
		"flexDirection": {
			"type": "string",
			"default": "row",
			"enum": ["row", "row-reverse", "column", "column-reverse"]
		},
		"justifyContent": {
			"type": "string",
			"default": "flex-start"
		},
		"alignItems": {
			"type": "string",
			"default": "stretch"
		},
		"gap": {
			"type": "object",
			"default": {
				"desktop": "20px",
				"tablet": "15px",
				"mobile": "10px"
			}
		},
		"gridColumns": {
			"type": "object",
			"default": {
				"desktop": 3,
				"tablet": 2,
				"mobile": 1
			}
		},
		"minHeight": {
			"type": "object",
			"default": {
				"desktop": "",
				"tablet": "",
				"mobile": ""
			}
		},
		"htmlTag": {
			"type": "string",
			"default": "div",
			"enum": ["div", "section", "article", "aside", "header", "footer", "main"]
		},
		"animation": {
			"type": "object",
			"default": {
				"type": "none",
				"duration": 500,
				"delay": 0,
				"easing": "ease-in-out"
			}
		},
		"responsive": {
			"type": "object",
			"default": {
				"hideOnDesktop": false,
				"hideOnTablet": false,
				"hideOnMobile": false
			}
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
