{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "designsetgo/form-select-field",
	"version": "1.0.0",
	"title": "Select Field",
	"category": "design",
	"description": "A dropdown select field for forms.",
	"keywords": ["form", "select", "dropdown", "options", "choice"],
	"parent": ["designsetgo/form-builder"],
	"textdomain": "designsetgo",
	"supports": {
		"html": false,
		"anchor": false,
		"customClassName": false,
		"reusable": false
	},
	"usesContext": [
		"designsetgo/form-builder/fieldSpacing",
		"designsetgo/form-builder/fieldLabelColor",
		"designsetgo/form-builder/fieldBorderColor",
		"designsetgo/form-builder/fieldBorderRadius",
		"designsetgo/form-builder/fieldFocusColor",
		"designsetgo/form-builder/inputHeight",
		"designsetgo/form-builder/inputPadding",
		"designsetgo/form-builder/fieldBackgroundColor"
	],
	"attributes": {
		"fieldName": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Select Option"
		},
		"helpText": {
			"type": "string",
			"default": ""
		},
		"required": {
			"type": "boolean",
			"default": false
		},
		"defaultValue": {
			"type": "string",
			"default": ""
		},
		"options": {
			"type": "array",
			"default": [
				{ "label": "Option 1", "value": "option-1" },
				{ "label": "Option 2", "value": "option-2" },
				{ "label": "Option 3", "value": "option-3" }
			],
			"items": {
				"type": "object",
				"properties": {
					"label": { "type": "string" },
					"value": { "type": "string" }
				}
			}
		},
		"placeholder": {
			"type": "string",
			"default": "-- Select an option --"
		},
		"fieldWidth": {
			"type": "string",
			"default": "100"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.scss",
	"style": "file:./style.scss"
}
